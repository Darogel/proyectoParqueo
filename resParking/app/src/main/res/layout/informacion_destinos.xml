<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:id="@+id/imgFilmsR"
        android:src="@mipmap/ic_launcher_round"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_vehiculoL"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgFilmsR"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="15dip"
        android:textStyle="bold"
        android:text="TextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_eHoraL"
        android:layout_below="@+id/txt_vehiculoL"
        android:layout_toRightOf="@+id/imgFilmsR"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="12dip"
        android:textStyle="bold"
        android:text="TextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_sHoraL"
        android:layout_below="@+id/txt_eHoraL"
        android:layout_toRightOf="@+id/imgFilmsR"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="12dip"
        android:textStyle="bold"
        android:text="TextView"/>

</RelativeLayout>