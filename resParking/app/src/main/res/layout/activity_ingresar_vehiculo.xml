<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlazaAdd"
    android:background="@drawable/background_login">

    <TextView
        android:id="@+id/txv_placaV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="50dp"
        android:text="@string/puesto"
        android:layout_alignParentLeft="true"
        android:textColor="#fff"
        />

    <EditText
        android:id="@+id/txt_placaV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txv_placaV"
        android:layout_marginHorizontal="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="#fff"/>
    <Button
        android:id="@+id/btn_guardarV"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:background="@drawable/background_button_login"
        android:clickable="true"
        android:padding="16dp"
        android:text="Guardar"
        android:textAllCaps="false"
        android:textColor="#f16f7d" />

    <Button
        android:id="@+id/btn_volverV"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/btn_guardarV"
        android:background="@drawable/background_button_volver"
        android:clickable="true"
        android:padding="16dp"
        android:text="Volver"
        android:textAllCaps="false"
        android:textColor="#fff" />



</RelativeLayout>