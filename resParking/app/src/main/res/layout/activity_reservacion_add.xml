<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservacionAdd"
    android:background="@drawable/background_login">

  <TextView
      android:id="@+id/txv_hEntrada"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="80dp"
      android:layout_marginHorizontal="50dp"
      android:text="@string/h_entrada"
      android:layout_alignParentLeft="true"
      android:textColor="#fff"/>


  <EditText
      android:id="@+id/etxt_hEntrada"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txv_hEntrada"
      android:layout_marginHorizontal="50dp"
      android:ems="10"
      android:enabled="false"
      android:inputType="textPersonName" />

  <ImageButton
      android:id="@+id/btn_hEntradaR"
      android:layout_width="34dp"
      android:layout_height="34dp"
      android:layout_alignEnd="@+id/etxt_hEntrada"
      android:layout_alignTop="@+id/etxt_hEntrada"
      android:src="@android:drawable/ic_menu_recent_history" />

  <TextView
      android:id="@+id/txv_hSalida"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="180dp"
      android:layout_marginHorizontal="50dp"
      android:text="@string/h_salida"
      android:layout_alignParentLeft="true"
      android:textColor="#fff"/>


  <EditText
      android:id="@+id/etxt_hSalida"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txv_hSalida"
      android:layout_marginHorizontal="50dp"
      android:ems="10"
      android:enabled="false"
      android:inputType="textPersonName" />

  <ImageButton
      android:id="@+id/btn_hSalidaR"
      android:layout_width="34dp"
      android:layout_height="34dp"
      android:layout_alignEnd="@+id/etxt_hSalida"
      android:layout_alignTop="@+id/etxt_hSalida"
      android:src="@android:drawable/ic_menu_recent_history" />

  <TextView
      android:id="@+id/txt_vehiculoR"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/etxt_hSalida"
      android:layout_marginBottom="160dp"
      android:text="@string/vehiculo"
      android:layout_alignParentLeft="true"
      android:layout_marginHorizontal="50dp"
      android:textColor="#fff"/>

  <EditText
      android:id="@+id/txt_vehiculo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_vehiculoR"
      android:layout_marginHorizontal="50dp"
      android:layout_alignTop="@+id/txt_vehiculoR"
      android:enabled="false"
      android:ems="10"
      android:inputType="textPersonName" />

  <TextView
      android:id="@+id/txt_plazaR"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_vehiculo"
      android:layout_marginBottom="218dp"
      android:text="@string/plaza"
      android:layout_marginHorizontal="50dp"
      android:textColor="#fff"/>

  <EditText
      android:id="@+id/txt_plaza"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt_plazaR"
      android:layout_marginHorizontal="50dp"
      android:layout_alignTop="@+id/txt_plazaR"
      android:enabled="false"
      android:ems="10"
      android:inputType="textPersonName" />

  <Button
      android:id="@+id/btn_guardarR"
      style="@style/Base.TextAppearance.AppCompat.Body1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:layout_below="@+id/txt_plaza"
      android:background="@drawable/background_button_login"
      android:clickable="true"
      android:padding="16dp"
      android:text="Log in"
      android:textAllCaps="false"
      android:textColor="#f16f7d" />

  <Button
      android:id="@+id/btn_volverR"
      style="@style/Base.TextAppearance.AppCompat.Body1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/btn_guardarR"
      android:layout_marginTop="24dp"
      android:background="@drawable/background_button_volver"
      android:clickable="true"
      android:padding="16dp"
      android:text="Volver"
      android:textAllCaps="false"
      android:textColor="#fff" />

 </RelativeLayout>
