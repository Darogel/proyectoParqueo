<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_login"
    android:paddingBottom="1dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="1dp"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="2dp"
                android:padding="16dp"
                android:src="@drawable/reserved" />

            <EditText
                android:id="@+id/etxt_hEntrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="12dp"
                android:ems="10"
                android:text="@string/entrada"
                android:textColor="#fff"
                android:maxLines="1"
                android:padding="8dp"
                android:enabled="false"
                android:textColorHint="#fff" />

            <ImageButton
                android:id="@+id/btn_hEntradaR"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="280dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_recent_history" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <EditText
                android:id="@+id/etxt_hSalida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="12dp"
                android:ems="10"
                android:text="@string/salida"
                android:textColor="#fff"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff" />
            <!--android:hint="Hora Salida"-->
            <ImageButton
                android:id="@+id/btn_hSalidaR"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="280dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_recent_history" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <TextView
                android:id="@+id/txt_VehiculoN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Vehiculo"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff"
                android:textStyle="bold"
                android:textSize="17dp"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cbx_vehiculo"
                android:layout_alignEnd="@+id/txt_VehiculoN"
                android:layout_alignTop="@+id/txt_VehiculoN"
                android:layout_alignRight="@+id/txt_VehiculoN"
                ></Spinner>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <TextView
                android:id="@+id/txt_plazaN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Plaza"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff"
                android:textStyle="bold"
                android:textSize="17dp"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cbx_plaza"
                android:layout_alignEnd="@+id/txt_plazaN"
                android:layout_alignTop="@+id/txt_plazaN"
                android:layout_alignRight="@+id/txt_plazaN"
                ></Spinner>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <Button
                android:id="@+id/btn_guardarRs"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/background_button_login"
                android:clickable="true"
                android:padding="16dp"
                android:text="Guardar"
                android:textAllCaps="false"
                android:textColor="#f16f7d" />

            <Button
                android:id="@+id/btn_volverRs"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/background_button_volver"
                android:clickable="true"
                android:padding="16dp"
                android:text="Volver"
                android:textAllCaps="false"
                android:textColor="#fff" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>